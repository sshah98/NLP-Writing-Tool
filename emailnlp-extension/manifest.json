{
  "manifest_version": 2,

  "name": "Email-NLP",
  "description": "A Chrome extension that gives continuious feedback on the inputted text",
  "version": "1.0",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon19.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "*://*/*"
  ],
   "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["js/index.js"]
    }
  ] 



}